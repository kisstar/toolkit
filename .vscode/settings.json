{
  "files.associations": {
    "*.svg": "html"
  },
  "biome.lspBin": "./node_modules/.bin/biome",
  "editor.defaultFormatter": "biomejs.biome",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit", // 保存时修复
    "source.organizeImports.biome": "explicit" // 导入排序
  }
}
